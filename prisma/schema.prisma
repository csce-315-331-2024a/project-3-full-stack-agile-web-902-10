generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  name       String
  avatar     String?
  is_manager Boolean
  login_log  Login_Log[]
}

model Login_Log {
  id      Int      @id @default(autoincrement())
  time    DateTime @default(now())
  login   Boolean
  user_id Int
  user    Users    @relation(fields: [user_id], references: [id])
}

model Ingredient {
  id       Int                @id @default(autoincrement())
  name     String             @unique
  stock    Int
  min_stock Int               @default(20000)
  category String
  menus    Menus_Ingredients?
}

model Menu_Item {
  id          Int                @id @default(autoincrement())
  name        String             @unique
  price       Int
  image_url   String
  category    String
  ingredients Menus_Ingredients?
}

model Menus_Ingredients {
  ratio         Int
  menu_item_id  Int        @unique
  ingredient_id Int        @unique
  ingredient    Ingredient @relation(fields: [ingredient_id], references: [id])
  menu_item     Menu_Item  @relation(fields: [menu_item_id], references: [id])

  @@id([menu_item_id, ingredient_id])
}

model Order_Log {
  id          Int      @id @default(autoincrement())
  time        DateTime @default(now())
  price       Int
  menu_items  String
  ingredients String
}
